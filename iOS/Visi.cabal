Name: Visi
Version: 0.1
Synopsis: A simple language and IDE for the iPad
Description: A simple language and IDE for the iPad
Build-type: Simple
Cabal-Version: >= 1.6

        

Executable Visi
    Main-Is: Main.hs
    GHC-Options: -threaded
    extensions: ExistentialQuantification, FlexibleContexts, CPP, ForeignFunctionInterface, DeriveGeneric, GeneralizedNewtypeDeriving
    include-dirs: Classes
    Frameworks:
        Foundation
        UIKit
        QuartzCore
        OpenGLES
    Hs-Source-Dirs: haskell, ../core/src
    Other-Modules: Visi.Util, Visi.Runtime, Visi.Expression, Visi.Parse, VisiPro.Snark
    Build-Depends:
        base >= 4,
        old-time,
        mtl,
        random,
        array,
        haskell98,
        parsec >= 3,
        containers,
        pretty,
        text,
        SHA,
        ghc-prim,
        aeson,
        regex-pcre-builtin,
        utf8-string,
        uuid

